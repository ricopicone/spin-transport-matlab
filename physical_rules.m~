%---physical rules
global T ii g G D B_r c T1 rmax u0 T12 T13 mu_p mu_e B0 B_d kB temp freq duty rho_1_langevin rho_2_langevin rho_3_langevin

pc = 5.345279561155669e-8;
% Langevin
precise_constant = -vpa(...
    tanh(...
        ( ...
            1 + gamma_e/gamma_p * Delta_3/Delta_2 ...
        )/( 1 + Delta_3/Delta_2 ) * ... 
        vpa(mu_p * B_d / ( kB * temp )));
pc-precise_constant
rho_1_langevin= @(r) precise_constant;    % langevin nuclear polarization
rho_2_langevin= @(r)  tanh((B0-B_d*r)*mu_p/kB/temp);    % langevin nuclear polarization
rho_3_langevin= @(r)  tanh((B0-B_d*r)*mu_e/kB/temp);    % langevin electron polarization